<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/viewroot"
	android:background="@color/colorPrimaryDark"
	android:fitsSystemWindows="true">
	
	<android.support.v4.widget.DrawerLayout
		android:id="@+id/drawer_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true">
		
		<LinearLayout
			android:id="@+id/firstlaunch"
			android:visibility="gone"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/colorPrimary"
			android:fitsSystemWindows="true">
			
			<LinearLayout
				android:id="@+id/screen1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center_vertical|center_horizontal">
				
				<TextView
					android:id="@+id/firstlaunch_text1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="30sp"
					android:textColor="#ffffff"
					android:text="@string/firstlaunch_autoriserfreebox" />
				
				<TextView
					android:id="@+id/firstlaunch_text2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="19sp"
					android:textColor="#ffffff"
					android:text="@string/firstlaunch_aut_explanation"
					android:layout_marginTop="20dp"
					android:gravity="center"
					android:padding="20dp" />
				
				<Button
					android:id="@+id/firstlaunch_ok"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="40dp"
					android:text="@string/ok" />
				
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/screen2"
				android:gravity="center_vertical|center_horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:visibility="gone">
				
				<TextView
					android:id="@+id/firstlaunch_text3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="30sp"
					android:textColor="#ffffff" 
					android:text="@string/firstlaunch_enattente"
					android:padding="20dp" />
				
				<ProgressBar
					android:id="@+id/progressbar"
					android:layout_marginTop="40dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/screen3"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center_vertical|center_horizontal">
				
				<TextView
					android:id="@+id/firstlaunch_text4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="30sp"
					android:textColor="#ffffff"
					android:text="@string/firstlaunch_andnow" />
				
				<TextView
					android:id="@+id/firstlaunch_text5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="19sp"
					android:textColor="#ffffff"
					android:text="@string/firstlaunch_aut_specialaut"
					android:layout_marginTop="20dp"
					android:gravity="center"
					android:padding="20dp" />
				
				<Button
					android:id="@+id/firstlaunch_ok2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="40dp"
					android:text="@string/ok" />
				
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/screen4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center_vertical|center_horizontal">
				
				<WebView
					android:id="@+id/webview"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="3" />
				
				<WebView
					android:id="@+id/webview_instructions"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_marginTop="10dp"
					android:layout_weight="1" />
				
			</LinearLayout>
			
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/ll_loading"
			android:visibility="gone"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/colorPrimary"
			android:gravity="center_vertical|center_horizontal"
			android:fitsSystemWindows="true">
			
			<TextView
				android:id="@+id/tv_loadingtxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="30sp"
				android:textColor="#ffffff"
				android:text="@string/loading" />
				
			<ProgressBar
				android:layout_marginTop="40dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			
			
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >
			
			<com.astuetz.PagerSlidingTabStrip
				android:id="@+id/tabs"
				android:layout_width="match_parent"
				android:layout_height="45dip"
				android:background="@color/colorPrimary"
				style="@style/PagerSlidingTabStrip" />
			
			<android.support.v4.view.ViewPager
				android:id="@+id/pager"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fitsSystemWindows="true" />
			
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/drawer"
			android:layout_width="240dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@color/colorPrimaryDark"
			android:fitsSystemWindows="true"
			android:layout_gravity="start" >
		
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:background="@color/colorPrimaryDarker" />
		
			<LinearLayout
				android:id="@+id/drawer_container"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/colorPrimary"
				android:orientation="vertical"
				android:paddingLeft="0dp" >
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					
					
					
				</LinearLayout>
			
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#2BA1E4"
					android:orientation="vertical"
					android:paddingLeft="0dp" >
					
					<LinearLayout
						android:id="@+id/drawer_settings"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/drawer_dark_button"
						android:orientation="horizontal"
						android:padding="@dimen/item_padding" >
						
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:paddingLeft="7dp"
							android:paddingRight="15dp"
							android:paddingTop="-5dp"
							android:src="@drawable/action_settings" />
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="3dp"
							android:shadowColor="@color/colorPrimaryDark"
							android:shadowDx="0"
							android:shadowDy="1"
							android:shadowRadius="2"
							android:text="ParamÃ¨tres"
							android:textColor="#ffffff"
							android:textSize="@dimen/drawer_font_size" />
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#474A53"
						android:orientation="vertical"
						android:visibility="gone" />
				</LinearLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#2BA1E4"
					android:orientation="vertical"
					android:paddingLeft="0dp" >
					
					<LinearLayout
						android:id="@+id/drawer_premium"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/drawer_dark_button"
						android:orientation="horizontal"
						android:padding="@dimen/item_padding" >
						
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:paddingLeft="7dp"
							android:paddingRight="15dp"
							android:paddingTop="-5dp"
							android:src="@drawable/action_settings" />
						
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="3dp"
							android:shadowColor="@color/colorPrimaryDark"
							android:shadowDx="0"
							android:shadowDy="1"
							android:shadowRadius="2"
							android:text="Premium"
							android:textColor="#ffffff"
							android:textSize="@dimen/drawer_font_size" />
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#474A53"
						android:orientation="vertical"
						android:visibility="gone" />
				</LinearLayout>
			</LinearLayout>
			
		</LinearLayout>
		
	</android.support.v4.widget.DrawerLayout>
</FrameLayout>