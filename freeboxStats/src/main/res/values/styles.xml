<resources>

	<style name="AppTheme" parent="AppTheme.Base" />

	<style name="AppTheme.Base" parent="Theme.AppCompat">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	
	<!-- PagerSlidingTabStrip -->
	<style name="PagerSlidingTabStrip">
		<item name="pstsIndicatorColor">#fff</item>
		<item name="pstsUnderlineColor">@color/colorPrimaryDark</item>
		<item name="pstsIndicatorHeight">4dp</item>
		<item name="pstsShouldExpand">true</item>
		<item name="pstsTabPaddingLeftRight">0dp</item>
	</style>

	<style name="Drawer_Row">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/drawer_dark_button</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:padding">@dimen/item_padding</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="Drawer_Row_Icon">
		<item name="android:layout_width">24dp</item>
		<item name="android:layout_height">24dp</item>
	</style>

	<style name="Drawer_Row_Text">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">28dp</item>
		<item name="android:textSize">@dimen/drawer_font_size</item>
		<item name="android:textColor">@color/drawerFontColor</item>
		<item name="android:shadowColor">@color/colorPrimaryDarker</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
	</style>

	<style name="GraphTitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">45dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Material_ListItem_Line1">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">1dp</item>
		<item name="android:maxLines">2</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:alpha">0.87</item>
	</style>

	<style name="Material_ListItem_Line2">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:maxLines">2</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:alpha">0.54</item>
	</style>

</resources>
